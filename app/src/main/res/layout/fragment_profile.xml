<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <ImageView
       android:id="@+id/profile_IMG_background"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:alpha="0.2"
       android:scaleType="centerCrop"
       android:src="@drawable/background_s" />


   <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:fillViewport="true"
       android:fitsSystemWindows="true">


      <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:app="http://schemas.android.com/apk/res-auto"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="10dp"
             android:gravity="center"
             android:orientation="vertical"
             android:paddingTop="15dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profile_IMG_user"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/profile"
                app:civ_border_color="#090909"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                app:civ_shadow_color="#090909"
                app:civ_shadow_radius="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elegantTextHeight="true"
                android:text="User Profile"
                android:textColor="@color/btn_color"
                android:textSize="30dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/btn_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp">

               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@drawable/person" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:elegantTextHeight="true"
                   android:text="First Name"
                   android:textColor="@color/black"
                   android:textSize="20dp"
                   android:textStyle="bold" />

               <EditText
                   android:id="@+id/profile_EDT_first"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="25dp"
                   android:elegantTextHeight="true"
                   android:enabled="false"
                   android:text="user"
                   android:textColor="@android:color/darker_gray"
                   android:textSize="18dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp">

               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@drawable/person" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:elegantTextHeight="true"
                   android:text="Last Name"
                   android:textColor="@color/black"
                   android:textSize="20dp"
                   android:textStyle="bold" />

               <EditText
                   android:id="@+id/profile_EDT_last"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="25dp"
                   android:elegantTextHeight="true"
                   android:enabled="false"
                   android:text="name"
                   android:textColor="@android:color/darker_gray"
                   android:textSize="18dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp">

               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@drawable/email" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:elegantTextHeight="true"
                   android:text="Email"
                   android:textColor="@color/black"
                   android:textSize="20dp"
                   android:textStyle="bold" />


               <EditText
                   android:id="@+id/profile_EDT_email"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="25dp"
                   android:elegantTextHeight="true"
                   android:enabled="false"
                   android:text="example@gmail.com"
                   android:textColor="@android:color/darker_gray"
                   android:textSize="18dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

               <TextView
                   android:id="@+id/profile_LBL_edit"
                   android:layout_width="180dp"
                   android:layout_height="50dp"
                   android:layout_marginBottom="10dp"
                   android:background="@drawable/bg_btn"
                   android:drawableLeft="@drawable/edit"
                   android:elegantTextHeight="true"
                   android:gravity="center"
                   android:paddingLeft="15dp"
                   android:text="Edit Profile"
                   android:textColor="@color/btn_color"
                   android:textSize="18dp" />

               <TextView
                   android:id="@+id/profile_LBL_logout"
                   android:layout_width="180dp"
                   android:layout_height="50dp"
                   android:background="@drawable/bg_btn"
                   android:drawableLeft="@drawable/out"
                   android:elegantTextHeight="true"
                   android:gravity="center"
                   android:paddingLeft="15dp"
                   android:text="Log Out "
                   android:textColor="@color/btn_color"
                   android:textSize="18dp" />

            </LinearLayout>

         </LinearLayout>

      </RelativeLayout>
   </ScrollView>
</RelativeLayout>